<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textSize="@dimen/text_size_large"
            android:id="@+id/widgetFromToTextView" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:id="@+id/widgetDayTextView"
            android:layout_marginLeft="@dimen/margin_between_widgets" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/imageUpButton"
            android:layout_marginLeft="@dimen/margin_between_widgets"
            android:background="@null"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/imageDownButton"
            android:layout_marginLeft="4dp"
            android:background="@null"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/imageMiddleButton"
            android:layout_marginLeft="@dimen/margin_between_widgets"
            android:background="@null"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/imageAppButton"
            android:layout_marginLeft="@dimen/margin_between_widgets"
            android:background="@null"
            android:src="@drawable/app_button"/>

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/widgetListView"
        android:background="@color/background"
        android:divider="@color/background"
        android:dividerHeight="1dp"/>

</LinearLayout>