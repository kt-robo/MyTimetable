<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/url_list"
    android:paddingTop="@dimen/padding_items_vertical"
    android:paddingBottom="@dimen/padding_items_vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/urlStationTextView"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/urlLineTextView"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/urlUpDownTextView"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/urlDayTextView"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_color" />

    </LinearLayout>

    <EditText
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="13"
        android:id="@+id/urlEditText"
        android:background="@drawable/edit_text"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/text_color"
        android:inputType="textMultiLine|textUri"
        android:paddingLeft="@dimen/padding_items_horizontal"
        android:paddingRight="@dimen/padding_items_horizontal"
        android:paddingTop="@dimen/padding_items_vertical"
        android:paddingBottom="@dimen/padding_items_vertical"
        android:layout_marginLeft="@dimen/padding_items_horizontal"
        android:layout_marginTop="@dimen/padding_items_vertical"
        android:layout_marginBottom="@dimen/padding_items_vertical" />

</LinearLayout>