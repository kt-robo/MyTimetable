<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/timeTextView"
        android:singleLine="true"
        android:textSize="@dimen/text_size_time_in_list_of_app"
        android:layout_gravity="center"
        android:padding="@dimen/padding_items_horizontal"
        android:gravity="center" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/border_in_list_size">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/lineTextView"
                android:layout_weight="3"
                android:paddingLeft="@dimen/padding_items_horizontal"
                android:paddingRight="@dimen/padding_items_horizontal"
                android:singleLine="true"
                android:textSize="@dimen/text_size_in_list_of_app" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/destTextView"
                android:layout_weight="5"
                android:paddingLeft="@dimen/padding_items_horizontal"
                android:paddingRight="@dimen/padding_items_horizontal"
                android:singleLine="true"
                android:textSize="@dimen/text_size_in_list_of_app"
                android:layout_marginLeft="@dimen/border_in_list_size" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/markTextView"
                android:layout_weight="2"
                android:paddingLeft="@dimen/padding_items_horizontal"
                android:paddingRight="@dimen/padding_items_horizontal"
                android:singleLine="true"
                android:textSize="@dimen/text_size_in_list_of_app"
                android:layout_marginLeft="@dimen/border_in_list_size" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/trainTextView"
            android:paddingLeft="@dimen/padding_items_horizontal"
            android:paddingRight="@dimen/padding_items_horizontal"
            android:singleLine="true"
            android:textSize="@dimen/text_size_in_list_of_app"
            android:layout_marginTop="@dimen/border_in_list_size" />

    </LinearLayout>

</LinearLayout>