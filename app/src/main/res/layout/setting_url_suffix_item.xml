<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/url_list"
    android:paddingTop="2dp"
    android:paddingBottom="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="@string/label_suffix"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_color" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:id="@+id/urlSuffixStationTextView"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_color" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:id="@+id/urlSuffixLineTextView"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_color" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:id="@+id/urlSuffixUpDownTextView"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_color" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:id="@+id/urlSuffixDayTextView"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_color" />

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/urlSuffixEditText"
        android:background="@drawable/edit_text"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/text_color"
        android:inputType="textMultiLine|textUri"
        android:paddingLeft="@dimen/padding_items_horizontal"
        android:paddingRight="@dimen/padding_items_horizontal"
        android:paddingTop="@dimen/padding_items_vertical"
        android:paddingBottom="@dimen/padding_items_vertical"
        android:layout_margin="@dimen/padding_items_horizontal"/>

</LinearLayout>
